{
    "type": "AdaptiveCard",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "🔔 Seguimiento de Tarea "
        },
        {
            "type": "ColumnSet",
            "columns": [
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "Image",
                            "style": "Person",
                            "url": "https://banorte.softexpert.app/se/v44096/ui/desktop/lite/resources/images/products32x32/product-104.png",
                            "altText": "${creator.name}",
                            "size": "Medium"
                        }
                    ],
                    "width": "60px",
                    "horizontalAlignment": "Center"
                },
                {
                    "type": "Column",
                    "items": [
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "Número Solicitud:@{variables('numeroSolicitud')}",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "weight": "Bolder",
                            "text": "Número de tarea:     @{variables('numeroTarea')}",
                            "height": "stretch",
                            "wrap": true
                        },
                        {
                            "type": "TextBlock",
                            "spacing": "None",
                            "text": "Fecha de Inicio: @{variables('fechaInializacion')}",
                            "isSubtle": true,
                            "wrap": true
                        }
                    ],
                    "width": "stretch"
                }
            ]
        },
        {
            "type": "TextBlock",
            "text": "Descripción Tarea",
            "wrap": true,
            "weight": "Bolder"
        },
        {
            "type": "TextBlock",
            "text": "@{variables('cambioDescripcion')}",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "La tarea << @{variables('numeroTarea')} >> asignada a usted está próxima a su fecha de finalización @{variables('fechaFinalizacion')} .\n",
            "wrap": true
        },
        {
            "type": "TextBlock",
            "text": "¿La tarea mencionada ya fue ejecutada?",
            "wrap": true,
            "size": "Large",
            "weight": "Bolder"
        }
    ],
    "actions": [
        {
            "type": "Action.Execute",
            "title": "Ya se finalizó la tarea",
            "id": "1",
            "data": {
                "actions": "Informo"
            }
        }
    ],
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "version": "1.6"
}